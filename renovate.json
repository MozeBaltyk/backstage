{
  "extends": ["config:recommended"],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "schedule": ["* 15-19 * * *"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "groupName": "ci",
      "matchPackagePatterns": ["*"]
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "ci",
      "matchPackagePatterns": ["*"]
    },
    {  
      "description": "https://github.com/backstage/backstage/issues/28080",
      "matchPackageNames": ["react"],
      "allowedVersions": "<19"
    },
    {
      "matchPackageNames": ["react-dom"],
      "allowedVersions": "<19"
    },
    {
      "matchPackageNames": ["@types/react-dom"],
      "allowedVersions": "<19"
    },
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["node"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "major updates"
    }
  ]
}
